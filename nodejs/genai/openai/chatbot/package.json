{
  "name": "chatbot",
  "version": "1.1.0",
  "description": "OpenAI chatbot actions demo",
  "main": "./chatbot.js",
  "bin": "./chatbot.js",
  "scripts": {
    "dev": "nodemon ./chatbot.js",
    "start": "node ./chatbot.js",
    "build": "./npm-build.sh",
    "test": "run-s test:*",
    "test:gendoc": "npx jsdoc src -d documentation",
    "test:lint": "run-s test:lint:*",
    "test:lint:html": "npx linthtml 'templates/*.html'",
    "test:lint:js": "npx eslint src/**/*.js --fix",
    "test:lint:yaml": "npx yamllint **/*.yml"
  },
  "pkg": {
    "scripts": "src/*.js",
    "assets": [
      "resources/*.properties",
      "templates/*.html",
      "public/*.css",
      "public/*.js",
      "certs/*.key",  // i) Optionally include .key files from the certs directory
      "certs/*.crt"   // i) Optionally include .crt files from the certs directory
      // If you use a CA certificate file (e.g., ca.crt), you can add it like this:
      // "certs/*.ca.crt"
      // Note: Using glob patterns like "*.key" and "*.crt" means pkg will include these files
      // if they exist in the specified directory (certs/). If they do not exist,
      // the glob pattern will match zero files, and pkg will NOT fail the build.
      // This addresses requirement ii).
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tpayne/lang-examples.git"
  },
  "dependencies": {
    "async-mutex": "0.5.0",
    "body-parser": "2.2.0",
    "connect-memcached": "^2.0.0",
    "dompurify": "^3.2.4",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.0",
    "morgan": "^1.10.0",
    "openai": "^4.97.0",
    "path": "^0.12.7",
    "pkg": "^5.8.1",
    "properties-reader": "2.3.0",
    "redis": "^5.0.1",
    "signal-exit": "4.1.0",
    "superagent": "^10.2.1",
    "winston": "^3.0.0"
    // iii) No new external packages were needed for the SSL/HTTP fallback logic.
    // The necessary modules (https, http, fs) are built into Node.js and don't
    // need to be listed here.
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@linthtml/linthtml": "^0.10.1",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-eslint-plugin": "^6.4.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-vue": "^10.1.0",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "jsdoc": "^4.0.4",
    "nodemon": "^3.1.10",
    "npm-run-all2": "8.0.1",
    "typescript-eslint": "^8.32.0",
    "yaml-lint": "1.7.0"
  },
  "keywords": [
    "openai",
    "chatbot"
  ],
  "author": "Tim Payne",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tpayne/lang-examples/issues"
  },
  "homepage": "https://github.com/tpayne/lang-examples#readme",
  "husky": {
    "hooks": {
      "post-merge": "npm outdated || :",
      "pre-commit": "npm test"
    }
  },
  "eslintIgnore": [
    "node_modules"
  ]
}